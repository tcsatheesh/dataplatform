{
    "$schema": "https://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "resourcename": {
            "type": "string"
        },
        "location": {
            "type": "string",
            "allowedValues": [
                "Australia East",
                "East US 2",
                "Southeast Asia",
                "West Central US",
                "West Europe"
            ]
        },
        "storageAccountResourceGroupName": {
            "type": "string"
        },
        "storageAccountName": {
            "type": "string"
        },
        "seatCount": {
            "type": "string",
            "defaultValue": "2"
        },
        "workspaceName": {
            "type": "string"
        },
        "workspaceUserObjectId": {
            "type": "string"
        },
        "modelManagementAccountName": {
            "type": "string",
            "defaultValue": ""
        },
        "modelManagementAccountSkuName": {
            "type": "string",
            "defaultValue": "DevTest"
        },
        "modelManagementAccountSkuTier": {
            "type": "string",
            "defaultValue": "Standard"
        }
    },
    "variables": {
        "experimentationAccountApiVersion": "2017-05-01-preview",
        "storageApiVersion": "2016-12-01",
        "classicStorageApiVersion": "2014-04-01",
        "modelManagementAccountApiVersion": "2017-09-01-preview",
        "authorizationApiVersion": "2015-07-01"
    },
    "resources": [
        {
            "apiVersion": "[variables('experimentationAccountApiVersion')]",
            "name": "[parameters('resourcename')]",
            "location": "[parameters('location')]",
            "type": "Microsoft.MachineLearningExperimentation/accounts",
            "properties": {
                "storageAccount": {
                    "storageAccountId": "[resourceId(parameters('storageAccountResourceGroupName'), 'Microsoft.Storage/storageAccounts', parameters('storageAccountName'))]",
                    "accessKey": "[listKeys(resourceId(parameters('storageAccountResourceGroupName'), 'Microsoft.Storage/storageAccounts', parameters('storageAccountName')), variables('storageApiVersion')).keys[0].value]"
                },
                "seats": "[parameters('seatCount')]"
            }
        },
        {
            "apiVersion": "[variables('experimentationAccountApiVersion')]",
            "name": "[concat(parameters('resourcename'), '/', parameters('workspaceName'))]",
            "location": "[parameters('location')]",
            "type": "Microsoft.MachineLearningExperimentation/accounts/workspaces",
            "dependsOn": [
                "[resourceId('Microsoft.MachineLearningExperimentation/accounts', parameters('resourcename'))]"
            ],
            "properties": {
                "friendlyName": "[parameters('workspaceName')]"
            }
        },
        {
            "apiVersion": "[variables('authorizationApiVersion')]",
            "name": "[concat(parameters('resourcename'), '/', parameters('workspaceName'), '/Microsoft.Authorization/29dbedc8-5001-4032-8cfb-048c3d9b5ea7')]",
            "type": "Microsoft.MachineLearningExperimentation/accounts/workspaces/providers/roleAssignments",
            "dependsOn": [
                "[resourceId('Microsoft.MachineLearningExperimentation/accounts/workspaces', parameters('resourcename'), parameters('workspaceName'))]"
            ],
            "properties": {
                "roleDefinitionId": "[concat(resourceId('Microsoft.MachineLearningExperimentation/accounts/workspaces', parameters('resourcename'), parameters('workspaceName')), '/providers/Microsoft.Authorization/roleDefinitions/', '8e3af657-a8ff-443c-a75c-2fe8c4bcb635')]",
                "principalId": "[parameters('workspaceUserObjectId')]"
            }
        },
        {
            "apiVersion": "[variables('modelManagementAccountApiVersion')]",
            "name": "[parameters('modelManagementAccountName')]",
            "location": "[parameters('location')]",
            "type": "Microsoft.MachineLearningModelManagement/accounts",
            "properties": {
                "description": ""
            },
            "sku": {
                "name": "[parameters('modelManagementAccountSkuName')]",
                "tier": "[parameters('modelManagementAccountSkuTier')]",
                "capacity": 1
            }
        }
    ]
}